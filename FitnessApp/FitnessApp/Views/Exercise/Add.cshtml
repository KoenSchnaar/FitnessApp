@model FitnessApp.Models.ExerciseModel

@{
    ViewData["Title"] = "Add";
}

<h1>Add exercise</h1>

<hr />
<form asp-action="Add" enctype="multipart/form-data">

    <div class="row">
        <div class="col-md-6">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Discription" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Discription" class="form-control" />
                    <span asp-validation-for="Discription" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="MuscleGroup" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="MuscleGroup" class="form-control" />
                    <span asp-validation-for="MuscleGroup" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label col-md-2"></label>
            </div>
            <div class="col-md-10">
                <img src="@Url.Content(Model.ImagePath)" style="margin:10px; height:200px; width:auto;" id="imagePreview"/>
                <input type="file" name="ImageUpload" accept="image/jpg, image/png, image/jpeg" onchange="ShowImagePreview(this, document.getElementById('imagePreview'))"/>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Exercises">Back to exercises</a>
</div>

