@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="d-flex align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    <div>
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="loginBtn">Profile</a>
    </div>
    <div class="">
        <form asp-area="Identity" asp-page="/Account/Logout">
            <button type="submit" class="nav-link btn btn-link logoutBtn">Logout</button>
        </form>
    </div>
}
else
{
    <div class="LoginService">
        <a asp-area="Identity" asp-page="/Account/Register" class="loginBtn">Register</a>
    </div>
    <div class="LoginService">
        <a asp-area="Identity" asp-page="/Account/Login" class="loginBtn">Login</a>
    </div>
}
</div>
