@model FitnessApp.Models.TrainingModel

<h1>Select your number of training days</h1>

<form method="post">
    <div>
        @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            @Html.EditorFor(m => m.Name, new { @class = "form-control resizedTextbox2" }) <br />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NrOfTrainingDays, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.ValidationMessageFor(m => m.NrOfTrainingDays, "", new { @class = "text-danger" })
            @Html.EditorFor(m => m.NrOfTrainingDays, new { @class = "form-control" })<br />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn-primary btn" asp-controller="Training" asp-action="AddSchedule1">Next</button>
        </div>
    </div>

</form>
